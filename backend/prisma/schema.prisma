generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model users {
  id          String   @id @default(uuid())
  email       String   @unique
  name        String
  password    String
  token       String?
  time        DateTime @updatedAt
  has_hotel   Boolean  @default(false)
  has_restr   Boolean  @default(false)
  is_admin    Boolean  @default(false)
  verified    Boolean  @default(false)

  hotels_name hotels[]
  restr_name  restr[]
  blogs_name  blogs[]

  bookings    bookings[]
}

model hotels {
  id        String    @id @default(uuid())
  name      String
  address   String
  gmap      String
  totalRoom Int       @default(2)
  maxInRoom Int       @default(2)
  details   String    @default("This is beutiful hotel")
  rate      Decimal   @default(0.0) // Provide a default value
  s1        String    @default("")
  s2        String    @default("")
  s3        String    @default("")
  s4        String    @default("")
  images    himages[]
  owner     users     @relation(fields: [ownerId], references: [id])
  ownerId   String
  bookings  bookings[]
}


model restr {
  id      String    @id @default(uuid())
  name    String
  address String
  gmap    String
  images  rimages[]
  owner   users     @relation(fields: [ownerId], references: [id])
  ownerId String
}

model blogs {
  id       String @id @default(uuid())
  title    String
  content  String
  author   users  @relation(fields: [authorId], references: [id])
  authorId String
}

model himages {
  id      String @id @default(uuid())
  url     String
  name    String?
  hotel   hotels @relation(fields: [hotelId], references: [id])
  hotelId String
}

model rimages {
  id      String @id @default(uuid())
  url     String
  name    String
  rest    restr  @relation(fields: [restrId], references: [id])
  restrId String
}

model requests {
  id        String @id @default(uuid())
  email     String
  message   String
  phone     String
}

model bookings {
  id        String    @id @default(uuid())
  email     String
  message   String
  phone     String
  time      DateTime  @updatedAt
  from      DateTime
  to        DateTime
  hotel     hotels    @relation(fields: [hotelId], references: [id])
  hotelId   String
  user      users     @relation(fields: [userId], references: [id])
  userId    String
}
